<!-- Breadcrumbs Area Start -->
<div class="breadcrumbs-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcrumb-single">
                    <ul class="breadcrumbs">
                        <li><a href="/" title="Return to Home">
                            <i class="fa fa-home"></i>
                            Orders
                        </a></li>
                        <li>
                            <span>></span>
                        </li>
                        <li>Summary</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs Area End --> 
<!--Cart Main Area Start--> 
<div class="cart-main-area section-padding2">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="heading-title">Order Details </h1>
      </div>
    </div>
    <div class="spacer-15"></div>
    <div class="row">
      <div class="col-md-4">
        <p>Order # <%= @order.order_number %></p>
      </div>
      <div class="col-md-4">
        <p>Ordered On: <%= @order.order_date %></p>
      </div>
      <div class="col-md-4">
        <p>Grand Total: <%= number_to_currency(@order.total) %></p>
      </div>
    </div>
    <div class="spacer-15"></div>
    <div class="row">
      <div class="col-md-12">
        <form action="#">
          <div class="table-content table-responsive">
            <table>
              <thead>
                <tr>
                  <th class="product-thumbnail">Image</th>
                  <th class="product-name">Product</th>
                  <th class="s-product-price">Price</th>
                  <th class="product-quantity">Quantity</th>
                  <th class="product-subtotal">Total</th>
                </tr>
              </thead>
              <tbody>
                <% @carted_products.each do |carted_product| %>
                  <tr>
                    <td class="product-thumbnail">
                      <a href="/products/<%= carted_product.product_id %>">
                        <img src="<%= carted_product.product.images[0].small.url %>" alt="" />
                      </a>
                    </td>
                    <td class="product-name">
                      <a href="#"><%= carted_product.product.name %></a>
                    </td>
                    <td class="s-product-price">
                      <span class="amounte"><%= number_to_currency(carted_product.product.price) %></span>
                    </td>
                    <td class="product-quantity">
                      <span class="amounte"><%= carted_product.quantity %></span>
                    </td>
                    <td class="product-subtotal"><%= number_to_currency(carted_product.product.price * carted_product.quantity) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="row">
            <div class="col-md-12 col-sm-7 col-xs-12">
              <div class="buttons-cart">
                <%= link_to "Continue Shopping", products_path %>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!--Cart Main Area End--> 

<script>
  $(document).ready(function() {
    trackPurchase(<%= @order.id %>);
  })  
</script>